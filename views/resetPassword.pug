extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Reset password
      form.form.form--reset-password(data-token=`${token}`)
        .form__group.ma-bt-md
          label.form__label(for='password') New password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8', maxlength='50')
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Confirm new password
          input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8', maxlength='50')
        .form__group
          button.btn.btn--green.btn--reset-password Reset password