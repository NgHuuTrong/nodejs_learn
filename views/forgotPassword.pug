extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Forgot password
      form.form.form--forgot-password
        .form__group
          label.form__label(for='email') Enter your email
          input#email.form__input(type='email', placeholder='you@example.com', required, name='email')
        .form__group
          button.btn.btn--green.btn--forgot-password Send email